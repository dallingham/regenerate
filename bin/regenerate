#! /usr/bin/env python3

import os
import sys

if os.path.dirname(sys.argv[0]) != ".":
    if sys.argv[0][0] == "/":
        FULL_PATH = os.path.dirname(sys.argv[0])
    else:
        FULL_PATH = os.path.join(os.getcwd(), os.path.dirname(sys.argv[0]))
else:
    FULL_PATH = os.getcwd()
sys.path.insert(0, os.path.dirname(FULL_PATH))

FULL_PATH = os.path.join(FULL_PATH, "..", "lib", "python", "regenerate")
if os.path.exists(FULL_PATH):
    sys.path.insert(0, os.path.dirname(FULL_PATH))


from regenerate.ui.main import main

if __name__ == '__main__':
    sys.exit(main())
